datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  description String
  coverImage  String
  rating      Int
  releaseDate DateTime
  cast        Actor[]
}

model Actor {
  id          String  @id @default(uuid())
  name        String
  alsoKnownAs String
  Movie       Movie?  @relation(fields: [movieId], references: [id])
  movieId     String?
}
